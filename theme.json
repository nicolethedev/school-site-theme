{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultPalette": false,
			"palette": [
				{
					"color": "#023250",
					"name": "Cobalt Blue",
					"slug": "cobalt-blue"
				},
				{
					"color": "#B3E3E1",
					"name": "Mint Green",
					"slug": "mint-green"
				},
				{
					"color": "#FFC67D",
					"name": "Bright Coral",
					"slug": "bright-coral"
				},
				{
					"color": "#F8F1E8",
					"name": "Sandy Sand",
					"slug": "sandy-sand"
				}
			]
		},

		"layout": {
			"contentSize": "620px",
			"wideSize": "1000px"
		},
		"spacing": {
			"units": [ "%", "px", "em", "rem", "vh", "vw" ]
		},
		"typography": {
    "fontFamilies": [
        {
            "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
            "name": "System Font",
            "slug": "system-font"
        },
        {
            "name": "Lato",
            "slug": "lato",
            "fontFamily": "'Lato', sans-serif",
            "fontFace": [
                {
                    "fontFamily": "Lato",
                    "fontStyle": "normal",
                    "fontWeight": "400",
                    "src": ["file:./assets/fonts/Lato-Regular.ttf"]
                },
                {
                    "fontFamily": "Lato",
                    "fontStyle": "normal",
                    "fontWeight": "700",
                    "src": ["file:./assets/fonts/Lato-Bold.ttf"]
                }
            ]
        },
        {
            "name": "Open Sans",
            "slug": "open-sans",
            "fontFamily": "'Open Sans', sans-serif",
            "fontFace": [
                {
                    "fontFamily": "Open Sans",
                    "fontStyle": "normal",
                    "fontWeight": "400",
                    "src": ["file:./assets/fonts/OpenSans-Regular.ttf"]
                },
                {
                    "fontFamily": "Open Sans",
                    "fontStyle": "normal",
                    "fontWeight": "700",
                    "src": ["file:./assets/fonts/OpenSans-Bold.ttf"]
                }
            ]
        }
    ]
},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"typography": {
		  "fontFamily": "var(--wp--preset--font-family--lato)"
		},
		"blocks": {
		  "core/heading": {
			"typography": {
			  "fontFamily": "var(--wp--preset--font-family--open-sans)"
			}
		  }
		}
	  },
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	],
	"version": 3
}
